melody Drumline start
    play BassDrum 20
    play BassDrum 10
    play SnareDrum 10
    wait 1

    play (overlay (repeat Drumline 2) (repeat Drumline 3))
    if x then play x end
    if x then play x else play y end
end

melody PianoSolo start
    for i from 1 to 10
        play Piano i
        play Piano C3
    end
end

melody Main start

    drumIntro = repeat Drumline 3

    play drumIntro

    mainsong = overlay Drumline PianoSolo

    play mainSong

end
